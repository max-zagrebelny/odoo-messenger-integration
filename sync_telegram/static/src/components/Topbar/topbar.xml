<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="mail.ChatterTopbar" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o_ChatterTopbar_controllers')]" position="after">
            <button class="o_ChatterTopbar_button o_ChatterTopbar_buttonTelegram btn me-2 btn-light"
                    type="button"
                    t-on-click="chatterTopbar.onClickTelegram"
            >
                <img src="/sync_telegram/static/images/icon.png" style="width: 30px; height: 30px;"/>
            </button>
        </xpath>
    </t>
</templates>