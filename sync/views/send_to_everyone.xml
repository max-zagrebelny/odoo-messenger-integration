<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="send_to_everyone_action" model="ir.actions.act_window">
            <field name="name">Send</field>
            <field name="res_model">send.to.everyone</field>
            <field name="view_mode">tree,form</field>
    </record>
    <record id="send_to_everyone_viber_action" model="ir.actions.act_window">
            <field name="name">Send</field>
            <field name="res_model">send.to.everyone.viber</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record id="send_to_everyone_view_form" model="ir.ui.view">
        <field name="name">send.to.everyone.form</field>
        <field name="model">send.to.everyone</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="url"/>
                        <field name="msg" widget="text_emojis" placeholder="Write a message..."/>
                        <field name="link"/>
                    </group>
                </sheet>
            </form>
            <footer>
                <button string="Send"  special="create" type="object" class="btn-primary o_mail_send"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </field>
    </record>

    <record id="send_to_everyone_view_viber_form" model="ir.ui.view">
        <field name="name">send.to.everyone.viber.form</field>
        <field name="model">send.to.everyone.viber</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="url"/>
                        <field name="msg" widget="text_emojis" placeholder="Write a message..."/>
                        <field name="link"/>
                        <field name="rich_media"/>
                    </group>
                </sheet>
            </form>
            <footer>
                <button string="Send"  special="create" type="object" class="btn-primary o_mail_send"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </field>
    </record>





    <record id="send_to_everyone_tree" model="ir.ui.view">
        <field name="name">send.to.everyone.tree</field>
        <field name="model">send.to.everyone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="msg" />
                <field name="project_id" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="send_to_everyone_view_search" model="ir.ui.view">
        <field name="name">send.to.everyone.search</field>
        <field name="model">send.to.everyone</field>
        <field name="arch" type="xml">
            <search>
                <field name="msg" />
                <field name="bot_name" />
            </search>
        </field>
    </record>

    <record id="send_to_everyone_action" model="ir.actions.act_window">
        <field name="name">All Newsletters</field>
        <field name="res_model">send.to.everyone</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="send_to_everyone_view_search" />
    </record>

    <menuitem
            id="all_newsletters"
            name="All newsletters"
            parent="all_message_and_newsletter_with_bots"
            action="send_to_everyone_action"
            sequence="10"
    />
</odoo>