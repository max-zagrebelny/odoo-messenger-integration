<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="send_to_everyone_action" model="ir.actions.act_window">
            <field name="name">Send</field>
            <field name="res_model">send.to.everyone</field>
            <field name="view_mode">tree,form</field>
    </record>
    <record id="send_to_everyone_viber_action" model="ir.actions.act_window">
            <field name="name">Send</field>
            <field name="res_model">send.to.everyone.viber</field>
            <field name="view_mode">tree,form</field>
    </record>

     <record id="send_to_everyone_view_form" model="ir.ui.view">
        <field name="name">send.to.everyone.form</field>
        <field name="model">send.to.everyone</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="url"/>
                        <field name="msg" widget="text_emojis" placeholder="Write a message..."/>
                        <field name="link"/>
                    </group>
                </sheet>
            </form>
            <footer>
                <button string="Send"  special="create" type="object" class="btn-primary o_mail_send"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </field>
    </record>

    <record id="send_to_everyone_view_viber_form" model="ir.ui.view">
        <field name="name">send.to.everyone.viber.form</field>
        <field name="model">send.to.everyone.viber</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="url"/>
                        <field name="msg" widget="text_emojis" placeholder="Write a message..."/>
                        <field name="link"/>
                        <field name="rich_media"/>
                    </group>
                </sheet>
            </form>
            <footer>
                <button string="Send"  special="create" type="object" class="btn-primary o_mail_send"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </field>
    </record>
</odoo>